			<property name="javax.persistence.jdbc.url" value="jdbc:derby:e:\SPDBTEST\MyDB;create=true"></property>
			<property name="javax.persistence.jdbc.user" value=""></property>
			<property name="javax.persistence.jdbc.password" value=""></property>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"></property>
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
